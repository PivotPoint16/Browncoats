<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_display_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bostonburke.cdbgdatamap.DisplayResults">

    <TextView
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:id="@+id/cityNameView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Boston"
        android:textSize="48sp"/>

    <TextView
        android:text="No results found."
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultsView"
        app:layout_constraintLeft_toLeftOf="@+id/cityNameView"
        app:layout_constraintRight_toRightOf="@+id/cityNameView"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/cityNameView"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Message"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/metaMsg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cityNameView"
        app:layout_constraintLeft_toLeftOf="@+id/cityNameView"
        app:layout_constraintRight_toRightOf="@+id/cityNameView"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
